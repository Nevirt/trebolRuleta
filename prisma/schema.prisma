generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prize {
  id               String   @id @default(uuid())
  name             String
  quantityTotal    Int
  quantityRemaining Int
  createdAt        DateTime @default(now())

  spins            Spin[]

  @@map("prizes")
}

model Spin {
  id        String   @id @default(uuid())
  prizeId   String
  prizeName String
  createdAt DateTime @default(now())

  prize     Prize    @relation(fields: [prizeId], references: [id], onDelete: Cascade)

  @@map("spins")
}
